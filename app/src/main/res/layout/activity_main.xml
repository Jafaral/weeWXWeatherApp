<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.odiousapps.weewxweather.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="48sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/windsock"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_weight="0.05"
                android:contentDescription="@string/empty"
                android:src="@drawable/windsock"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_weight=".40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_weight=".40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"/>

            <ImageView
                android:id="@+id/barometer"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_weight="0.05"
                android:contentDescription="@string/empty"
                android:src="@drawable/barometer"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/compass"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_weight="0.05"
                android:contentDescription="@string/empty"
                android:src="@drawable/compass"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_weight=".40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_weight=".40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"/>

            <ImageView
                android:id="@+id/humidity"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_weight="0.05"
                android:contentDescription="@string/empty"
                android:src="@drawable/humidity"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/umbrella"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_weight="0.05"
                android:contentDescription="@string/empty"
                android:src="@drawable/umbrella"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_weight=".40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_weight=".40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"/>

            <ImageView
                android:id="@+id/dew"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_weight="0.05"
                android:contentDescription="@string/empty"
                android:src="@drawable/droplet"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sunnies1"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_weight="0.05"
                android:contentDescription="@string/empty"
                android:src="@drawable/sunglasses"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_weight=".40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_weight=".40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"/>

            <ImageView
                android:id="@+id/sunnies2"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_weight="0.05"
                android:contentDescription="@string/empty"
                android:src="@drawable/sunglasses"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sunrise"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_weight="0.05"
                android:contentDescription="@string/empty"
                android:src="@drawable/sunrise"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/sunset"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_weight="0.05"
                android:contentDescription="@string/empty"
                android:src="@drawable/sunset"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/moonrise"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_weight="0.05"
                android:contentDescription="@string/empty"
                android:src="@drawable/moonrise"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/moonset"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_weight="0.05"
                android:contentDescription="@string/empty"
                android:src="@drawable/moonset"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:gravity="center"/>
        </LinearLayout>

        <WebView
            android:id="@+id/webView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
